= form_for @group do |f|
  - if @group.errors.any?
    #error_explanation
      %h2= "#{pluralize(@group.errors.count, "error")} prohibited this group from being saved:"
      %ul
        - @group.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field.hide
    = f.label :user_id
    = f.text_field :user_id, :readonly => true, :value => current_user.id
  .actions
    = f.submit 'Save'
